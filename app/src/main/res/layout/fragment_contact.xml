<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBECF0"
    tools:context=".ContactFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/contact_usimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/sg_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />
            <LinearLayout
                android:id="@+id/rellayout1"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact_usimage">

                <androidx.cardview.widget.CardView
                    android:id="@+id/contact_card1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="20dp"

                    android:elevation="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#fffafa">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please Call Us For Orders"
                        android:gravity="center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000">
                    </TextView>


                    <LinearLayout
                        android:id="@+id/call_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="50dp">


                        <Button
                            android:id="@+id/contact_btn1"
                            android:text="9666339067"
                            android:backgroundTint="#162DA1"
                            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/contact_btn2"
                            android:text="7989979537"
                            android:backgroundTint="#162DA1"
                            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/contact_card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#f0ffff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chat Ur Orders"
                        android:gravity="center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000">
                    </TextView>



                    <LinearLayout
                        android:id="@+id/msg_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="50dp">


                        <Button
                            android:id="@+id/chat_with_Us_Btn"
                            android:text="whatsapp"
                            android:backgroundTint="#ffffff"
                            android:drawableLeft="@drawable/whatsapp_chat"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/mail_Us_Btn"
                            android:text="sales@sajinigarments.com"
                            android:backgroundTint="#ffffff"
                            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>






            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>